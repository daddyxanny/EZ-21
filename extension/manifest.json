{
  "manifest_version": 3,
  "name": "EZ 21 - Blackjack Strategy",
  "version": "1.0",
  "description": "Smart Blackjack Predictor with real-time strategy recommendations",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.paypal.com/*",
    "https://*.paypal.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "EZ 21 Blackjack Strategy"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline'"
  }
}